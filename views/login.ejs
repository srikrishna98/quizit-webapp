	<script type="text/javascript">
			particlesJS.load("particles-js",'js/particlesjs-config.json');
			var $loading = $('#loader').hide();
    		$(document)
			.ajaxStart(function () {
				$loading.show();
				$('.account-wall').hide();
			})
			.ajaxStop(function () {
				$loading.hide();
				$('.account-wall').show();
